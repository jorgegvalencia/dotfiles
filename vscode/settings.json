{
  // ─────────────────────────────
  // UI / Workbench & Window
  // ─────────────────────────────
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "CodeSandbox Legacy",
  "workbench.preferredDarkColorTheme": "CodeSandbox Legacy",
  "workbench.preferredLightColorTheme": "One Dark Palenight",
  "workbench.iconTheme": "symbols",
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.openPositioning": "right",
  "workbench.editor.alwaysShowEditorActions": true,
  "workbench.editor.empty.hint": "hidden",
  "workbench.fontAliasing": "auto",
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.indent": 10,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.quickOpen.preserveInput": true,
  "workbench.commandPalette.preserveInput": true,
  "window.nativeTabs": true,
  "window.nativeFullScreen": false,
  "window.titleBarStyle": "custom",
  "window.title": "${dirty}${rootName}${separator}${appName}",
  "window.newWindowProfile": "Default",
  "zenMode.hideActivityBar": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,

  // ─────────────────────────────
  // Fine-grained color overrides for the workbench
  // ─────────────────────────────
  "workbench.colorCustomizations": {
    "debugToolBar.background": "#193549",
    "panel.border": "#fbed80",
    "sash.hoverBorder": "#fbed80",
    "sideBar.border": "#fbed80",
    "tab.activeBorder": "#fbed80",
    "terminal.ansiBlack": "#000000",
    "terminal.ansiBlue": "#0088ff",
    "terminal.ansiBrightBlack": "#0050A4",
    "terminal.ansiBrightBlue": "#0088ff",
    "terminal.ansiBrightCyan": "#80fcff",
    "terminal.ansiBrightGreen": "#3ad900",
    "terminal.ansiBrightMagenta": "#fb94ff",
    "terminal.ansiBrightRed": "#ff628c",
    "terminal.ansiBrightWhite": "#193549",
    "terminal.ansiBrightYellow": "#ffc600",
    "terminal.ansiCyan": "#80fcff",
    "terminal.ansiGreen": "#63df97",
    "terminal.ansiMagenta": "#fb94ff",
    "terminal.ansiRed": "#ff628c",
    "terminal.ansiWhite": "#ffffff",
    "terminal.ansiYellow": "#ffc600",
    "terminalCursor.background": "#ffc600",
    "terminalCursor.foreground": "#ffc600",
    "editorIndentGuide.background1": "#00000001",
    "editorIndentGuide.activeBackground1": "#ff9900"
  },

  // ─────────────────────────────
  // Editor: Typography & Layout
  // ─────────────────────────────
  "editor.fontFamily": "CommitMono, Geist Mono, Monaco, Fira Code, Inconsolata, Cascadia Code, Consolas, 'Courier New', monospace",
  "editor.fontSize": 16,
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,
  "editor.lineHeight": 26,
  "editor.letterSpacing": -0.7,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  "editor.wrappingIndent": "same",

  // ─────────────────────────────
  // Editor: Visuals & Decorations
  // ─────────────────────────────
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "breadcrumbs.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.indentation": false,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.smoothScrolling": true,
  "editor.renderWhitespace": "selection",
  "editor.roundedSelection": true,
  "editor.rulers": [120],
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.defaultModel": "foldingProviderModel",
  "editor.codeLens": true,
  "editor.inlayHints.enabled": "on",
  "editor.inlayHints.fontFamily": "Monaco, Monolisa",
  "editor.inlayHints.fontSize": 8,
  "editor.inlayHints.padding": true,
  "editor.experimental.asyncTokenization": true,
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "*.deprecated": { "strikethrough": true },
      "*.readonly": { "fontStyle": "italic" }
    }
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      { "scope": ["meta.type", "keyword.control"], "settings": { "fontStyle": "italic" } },
      { "name": "params", "scope": ["meta.type"], "settings": { "fontStyle": "bold" } },
      { "name": "tag", "scope": ["entity.name.tag.pug", "entity.other.attribute-name.tag.pug"], "settings": { "fontStyle": "bold" } },
      { "name": "attrs", "scope": ["entity.other.attribute-name.html.vue"], "settings": { "fontStyle": "italic" } },
      { "name": "Comment blocks", "scope": ["comment"], "settings": { "fontStyle": "italic" } },
      { "name": "Comment", "scope": ["comment.line"], "settings": { "fontStyle": "italic underline" } },
      { "name": "Arguments", "scope": ["variable.parameter.ts"], "settings": { "fontStyle": "italic underline" } },
      { "name": "Constant", "scope": ["variable.other.constant.object.ts"], "settings": { "foreground": "#829cc9" } }
    ]
  },

  // ─────────────────────────────
  // Editor: IntelliSense & Navigation
  // ─────────────────────────────
  "editor.quickSuggestions": {
    "comments": false,
    "other": true,
    "strings": false
  },
  "editor.suggest.insertMode": "replace",
  "editor.snippetSuggestions": "inline",
  "editor.accessibilitySupport": "off",
  "editor.multiCursorModifier": "alt",
  "editor.mouseWheelZoom": false,

  // ─────────────────────────────
  // Files, Search & Notebook
  // ─────────────────────────────
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "search.exclude": {
    "**/.git": true,
    "**/dist/": true,
    "**/node_modules/": true
  },
  "search.quickAccess.preserveInput": true,
  "explorer.compactFolders": true,
  "explorer.incrementalNaming": "smart",
  "explorer.fileNesting.patterns": {
    "*.js": "$(capture).js.map, $(capture).*.js, $(capture)_*.js",
    "*.ts": "$(capture).js, $(capture).d.ts.map, $(capture).*.ts, $(capture)_*.js, $(capture)_*.ts",
    "package.json": ".browserslist*, .circleci*, .eslint*, .prettier*, package-lock.json, tsconfig.*, yarn*",
    "//": "Nota: Se ha truncado la lista de nesting por brevedad"
  },

  // ─────────────────────────────
  // Terminal
  // ─────────────────────────────
  "terminal.explorerKind": "external",
  "terminal.external.osxExec": "wrap.app",
  "terminal.integrated.allowMnemonics": true,
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.fontFamily": "'JetBrainsMono NF', Hack Nerd Font Mono, Comic Code, Monaco, Fira Code, Inconsolata",
  "terminal.integrated.fontSize": 12.5,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontWeightBold": "500",
  "terminal.integrated.letterSpacing": 0,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.env.linux": {},
  "terminal.integrated.env.osx": {},
  "terminal.integrated.initialHint": false,

  // ─────────────────────────────
  // Linting & Formatting (global)
  // ─────────────────────────────
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "always",
    "source.fixAll.stylelint": "always",
    "source.organizeImports": "never"
  },
  "html.format.enable": false,

  // ─────────────────────────────
  // Language-specific overrides
  // ─────────────────────────────
  "[html]": { "editor.defaultFormatter": "vscode.html-language-features" },
  "[javascript]": { "editor.showFoldingControls": "mouseover" },
  "[json]": { "editor.defaultFormatter": "vscode.json-language-features" },
  "[yaml]": { "editor.autoIndent": "none", "editor.formatOnSave": false },

  // ─────────────────────────────
  // Tailwind / Frameworks
  // ─────────────────────────────
  "emmet.includeLanguages": { "vue-html": "html" },
  "emmet.showSuggestionsAsSnippets": true,
  "vue.inlayHints.inlineHandlerLeading": true,
  "vue.complete.casing.props": "kebab",

  // ─────────────────────────────
  // Git & Collaboration
  // ─────────────────────────────
  "git.allowForcePush": true,
  "git.allowNoVerifyCommit": true,
  "git.confirmNoVerifyCommit": false,
  "git.suggestSmartCommit": false,
  "git.openRepositoryInParentFolders": "never",
  "git.blame.editorDecoration.enabled": true,
  "scm.defaultViewMode": "tree",
  "scm.showHistoryGraph": false,
  "githubPullRequests.createOnPublishBranch": "never",
  "githubPullRequests.fileListLayout": "tree",
  "githubPullRequests.pullBranch": "never",

  // ─────────────────────────────
  // Extension-specific tweaks
  // ─────────────────────────────
  "errorLens.fontFamily": "Comic Code, Monaspace Radon Var, Monaco, Monolisa",
  "errorLens.fontSize": "11",
  "errorLens.fontStyleItalic": true,
  "errorLens.fontWeight": "500",
  "redhat.telemetry.enabled": false,
  "extensions.ignoreRecommendations": true,

  // ─────────────────────────────
  // Keybindings (Vim extension)
  // ─────────────────────────────
  "vim.leader": "<Space>",
  "vim.insertModeKeyBindings": [                       // jj to exit insert mode
    { "before": ["j", "k"], "after": ["<Esc>"] }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [";"],
      "after": [":"]
    },
    {
      "before": ["ñ"],
      "after": [";"]
    },
    {
        "before": ["-"],
        "after": ["/"]
    },
    {
        "before": ["<leader>", "m"],
        "commands": [
            "bookmarks.toggle"
        ]
    },
    {
        "before": ["<leader>", "b"],
        "commands": [
            "bookmarks.list"
        ]
    },
    {
      "before": ["<Leader>", "p"],
      "commands": [
          "workbench.action.showCommands"
      ]
    },
    {
      "before": ["<Leader>", "t"],
      "commands": [
          "workbench.action.gotoSymbol"
      ]
    },
    {
      "before": ["<Leader>", "t", "t"],
      "commands": [":tabnew"]
    },
    {
      "before": ["<Leader>", "t", "n"],
      "commands": [":tabnext"]
    },
    {
      "before": ["<Leader>", "t", "p"],
      "commands": [":tabprev"]
    },
    {
      "before": ["<Leader>", "t", "o"],
      "commands": [":tabo"]
    },
    { "before": ["<C-h>"], "after": ["<C-w>", "h"] },
    { "before": ["<C-j>"], "after": ["<C-w>", "j"] },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
    {
      "before": ["<Leader>", "j"],
      "after": ["J"]
    },
    {
    "before": ["J"],
      "after": ["5", "j"]
    },
    {
      "before": ["K"],
      "after": ["5", "k"]
    },
    { "before": ["g", "c", "c"], "commands": ["editor.action.commentLine"] },
    { "before": ["g", "F"], "commands": ["outline.focus"] },
     {
    "before": ["g", "<space>", "e"],
    "commands": [
      "workbench.view.explorer",
      "workbench.files.action.focusFilesExplorer"
    ]
  },
    { "before": ["g", "<space>", "c", "c"], "commands": ["editor.action.commentLine"] }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["g", "c"], "commands": ["editor.action.commentLine"] },
    { "before": ["g", "d"], "commands": ["editor.action.revealDefinition"] },
    { "before": ["g", "r"], "commands": ["editor.action.referenceSearch.trigger"] }
  ],
  "vim.camelCaseMotion.enable": true,
  "vim.foldfix": true,
  "vim.easymotion": true,

  "outline.problems.badges": true,
  "outline.problems.colors": true,
  "outline.problems.enabled": true,
  "outline.showConstructors": false,
  "outline.showStructs": false,
  "outline.showTypeParameters": false,

  // ─────────────────────────────
  // Others
  // ─────────────────────────────
  "Notes.notesLocation": "/Users/jorge.gonzalez/Documents/notes",
  "notes.notesLocation": "/Users/jorge.gonzalez/Documents/notes",
  "dateTime.showDayOfMonth": true,
  "dateTime.showMonth": true,
  "dateTime.showSeconds": true,
  "debug.console.fontSize": 11.5,
  "debug.inlineValues": "off",
  "debug.internalConsoleOptions": "neverOpen",
  "debug.javascript.autoAttachFilter": "onlyWithFlag",
  "debug.openDebug": "neverOpen",
  "git-graph.commitDetailsView.location": "Docked to Bottom",
  "git-graph.date.format": "ISO Date & Time",
  "git-graph.tabIconColourTheme": "grey",
  "npm.runSilent": true,
  "screencastMode.fontSize": 32,
  "screencastMode.verticalOffset": 10,
  "svg.preview.transparencyGrid": true,
  "svg.preview.boundingBox": false,
  "svg.preview.autoOpen": true,
  "symbols.hidesExplorerArrows": false,
  "diffEditor.renderSideBySide": false,
  "accessibility.signals.save": { "sound": "never" },
  "accessibility.signalOptions.volume": 15,
  "remote.autoForwardPortsSource": "hybrid",
  "security.promptForLocalFileProtocolHandling": false,
  "settingsSync.ignoredSettings": [
    "-window.zoomLevel",
    "editor.fontFamily"
  ],
  "window.zoomPerWindow": false
}