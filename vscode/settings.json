// Coloque su configuración en este archivo para sobrescribir la configuración predeterminada.
{
    "editor.autoIndent": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "block",
    "editor.fontFamily": "Monaco, Inconsolata, Consolas, 'Courier New', monospace",
    "editor.fontSize": 13,
    "editor.fontWeight": "400",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.letterSpacing": 0,
    "editor.lineHeight": 28,
    "editor.minimap.enabled": true,
    "editor.minimap.side": "left",
    "editor.mouseWheelZoom": true,
    "editor.multiCursorModifier": "alt",
    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "all",
    "editor.roundedSelection": true,
    "editor.rulers": [ 100 ],
    "editor.smoothScrolling": true,
    "editor.snippetSuggestions": "top",
    "editor.tabSize": 2,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "same",

    "html.format.unformatted": null,
    "html.format.enable": true,
    "html.format.wrapAttributes": "force",
    
    "terminal.integrated.confirmOnExit": true,
    "terminal.integrated.enableBell": false,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.lineHeight": 1.3,
    // 64-bit PowerShell if available, otherwise 32-bit
    "terminal.integrated.shell.windows": "C:\\Windows\\sysnative\\WindowsPowerShell\\v1.0\\powershell.exe",
    
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
    "window.zoomLevel": 0,
    
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Field Lights",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreview": true,
    "workbench.editor.openPositioning": "right",
    "workbench.editor.revealIfOpen": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "workbench.colorCustomizations": {
        // "editor.background": "#1f2224",
        // "activityBar.background": "#191a1c",
        "sideBar.foreground": "#e9cc26",
        // "sideBar.background": "#191a1c",
        "selection.background": "#09ba85",
        "editorBracketMatch.border": "#FF0000",
        // "gitDecoration.modifiedResourceForeground": "#ffc600",
        // "gitDecoration.deletedResourceForeground": "#ff628c",
        "gitDecoration.untrackedResourceForeground": "#3ad900",
        "gitDecoration.ignoredResourceForeground": "#aaa",
        // "gitDecoration.conflictingResourceForeground": "#FF7200",
    },

    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "javascript.format.insertSpaceBeforeFunctionParenthesis": false,

    // extensions settings
    "material-icon-theme.folders.color": "#f8e36a",
    "sublimeTextKeymap.promptV3Features": true,
    "json.format.enable": true,
    "beautify.ignore": [
        "**/*.jsx",
        "**/*.js"
    ],
    "beautify.language": {
        "css": [
            "css",
            "scss"
        ]
    },
    "explorer.confirmDragAndDrop": false,
    "gitlens.keymap": "alternate"
}